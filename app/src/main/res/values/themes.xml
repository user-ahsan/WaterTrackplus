<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WaterTrack" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar and Navigation -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Colors -->
        <item name="colorPrimary">@color/benitoite_dark</item>
        <item name="colorPrimaryVariant">@color/benitoite_darkest</item>
        <item name="colorSecondary">@color/benitoite_medium</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/benitoite_lightest</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/benitoite_darkest</item>
        <item name="android:textColorSecondary">@color/benitoite_dark</item>
        
        <!-- Card Colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/benitoite_darkest</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.WaterTrack" parent="Base.Theme.WaterTrack">
    </style>

    <!-- Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.App.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/benitoite_darkest</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/benitoite_darkest</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/benitoite_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/benitoite_dark</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>