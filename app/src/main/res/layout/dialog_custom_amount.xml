<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Custom Amount"
        android:textColor="@color/benitoite_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Amount (ml)"
        android:textColorHint="@color/benitoite_medium"
        app:endIconMode="clear_text"
        app:endIconTint="@color/benitoite_dark"
        app:startIconDrawable="@drawable/ic_water_drop"
        app:startIconTint="@color/benitoite_dark"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/benitoite_dark"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="@color/benitoite_dark"
        app:layout_constraintTop_toBottomOf="@id/tvDialogTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/benitoite_darkest"
            android:textCursorDrawable="@null" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Quick Suggestions -->
    <TextView
        android:id="@+id/tvSuggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Quick Suggestions:"
        android:textColor="@color/benitoite_medium"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilAmount" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/tvSuggestions">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip400"
            style="@style/Widget.MaterialComponents.Chip.Choice.Custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400ml" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip750"
            style="@style/Widget.MaterialComponents.Chip.Choice.Custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="750ml" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1000"
            style="@style/Widget.MaterialComponents.Chip.Choice.Custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000ml" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/chipGroupSuggestions">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="@color/benitoite_medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textAllCaps="false"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/benitoite_dark"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 