<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WaterTrack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar and Navigation -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/card_background</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Colors -->
        <item name="colorPrimary">@color/benitoite_dark</item>
        <item name="colorPrimaryVariant">@color/benitoite_darkest</item>
        <item name="colorSecondary">@color/benitoite_medium</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/benitoite_lightest</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/benitoite_dark</item>
        
        <!-- Card Colors -->
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>

        <!-- Input Field Style -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Dark</item>
        
        <!-- Chip Style -->
        <item name="chipStyle">@style/Widget.App.Chip.Dark</item>
    </style>

    <style name="Theme.WaterTrack" parent="Base.Theme.WaterTrack" />

    <!-- Card Style -->
    <style name="Widget.App.CardView.Dark" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/widget_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView.Dark" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/card_background</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>

    <!-- Input Field Style -->
    <style name="Widget.App.TextInputLayout.Dark" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip.Dark" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/benitoite_dark</item>
        <item name="checkedIconTint">@color/white</item>
    </style>
</resources> 